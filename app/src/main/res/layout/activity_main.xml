<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Throttle Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throttle:"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/throttleSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp"
            android:contentDescription="Throttle" />
    </LinearLayout>

    <!-- Pitch and Roll Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch:"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/pitchSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp"
            android:contentDescription="Pitch control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll:"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <SeekBar
            android:id="@+id/rollSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp"
            android:contentDescription="roll control" />
    </LinearLayout>

    <!-- Yaw Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yaw:"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/yawSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp"
            android:contentDescription="yaw_control" />
    </LinearLayout>

    <!-- Buttons for Takeoff, Land, and Emergency Stop -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/takeoffButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="takeoff"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/landButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="land"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/emergencyStopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="emergency_stop"/>
    </LinearLayout>

</LinearLayout>